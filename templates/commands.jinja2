{% extends "base.jinja2" %}

{% block title %}
  Commands
{% endblock %}

{% block content %}
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li>
        <a href="/commands" class="is-active">All commands</a>
      </li>
    </ul>
  </nav>

  {% if commands %}
    <section class="section">
      <div class="container">
        <h1 class="title">
          All commands
        </h1>
      </div>
    </section>
    <section class="section">
      <p>These are all of the commands currently known by <b>baalorbot</b>.</p>
    </section>

    <section class="section">
      <div id="command-list" class="columns">
        {% for name in commands %}
          <a class="box column is-narrow" href="/commands/{{ name }}">{{ prefix }}{{ name }}</a>
        {% endfor %}
      </div>
    </section>
  {% else %}
    <section class="section">
      <h1 class="title">
        No commands found
      </h1>
      <p>
        This is probably because you don't have any of the bots running. The
        commands are populated from the Discord and Twitch bots. You only need
        one of them, but without them there are no known commands.
      </p>
    </section>
  {% endif %}
{% endblock %}
